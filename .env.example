# Twitter API credentials
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Security
# Generate a secure random key: node -e "console.log(Buffer.from(crypto.randomBytes(32)).toString('base64'))"
ENCRYPTION_KEY=your_base64_encoded_encryption_key

# CORS configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# API keys configuration
# JSON string mapping API keys to allowed origins
# Example: {"key1":["https://yourdomain.com"],"key2":["https://anotherdomain.com"]}
API_KEYS={"your_api_key":["https://yourdomain.com"]}

# Environment
ENVIRONMENT=development

# Redis configuration (optional)
# For Upstash Redis, format is: redis://default:password@hostname:port
REDIS_URL=redis://default:your_password@your_hostname:your_port
