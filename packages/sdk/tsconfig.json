{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
